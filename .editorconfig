# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset                 = utf-8
end_of_line             = lf
indent_style            = tab
indent_size             = 4
insert_final_newline    = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size  = 2      # or 4-spaces if you prefer
